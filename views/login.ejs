<!doctype html>
<html>
<head>
	<title>Node Authentication</title>
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
	<style>
		h1{font-size:6em;margin-bottom: 30px;}
		form label{font-size: 3em;}
		.form-control{height: 80px;font-size:3em;}
		form button{padding: 20px;}
		.btn{padding: 30px 50px 30px 50px;font-size: 3em;}
		.row .row{margin-top: 30px;}
		p{font-size:3em;}
		.container{margin-top:10%;}
		.alert{font-size:3em;}
		@media (min-width: 992px) {
			.container{margin-top:3%;}
			h1{font-size:4em;}
			form label{font-size: 1em;}
			.form-control{height: 35px;font-size:1em;}
			p{font-size: 1em;}
			.btn{padding: 5px 20px 5px 20px; font-size:1.4em;}
			.alert{font-size:1em;}
		}
	</style>
</head>
<body>
	<div class="container">
		<div class="row">
			<div class="col-xs-12 col-md-6 col-md-offset-3">
				<h1><i class="fa fa-sign-in"></i> Login</h1>
				<% if (message.length > 0) { %>
					<div class="alert alert-danger"><%= message %></div>
				<% } %>

				<form action="login" method="post">
					<div class="form-group">
						<label>Email</label>
						<input type="text" class="form-control" name="email">
					</div>
					<div class="form-group">
						<label>Password</label>
						<input type="password" class="form-control" name="password">
					</div>
					<div class="row">
						<div class="col-xs-8">
							<p><a href="signup">Signup</a> or go <a href=".">home</a>.</p>
						</div>
						<div class="col-xs-4 text-right"><button type="submit" class="btn btn-warning btn-lg">Login</button></div>
					</div>
					
				</form>
				<hr>

				
			</div>
		</div>
	</div>
</body>
</html>